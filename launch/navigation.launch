<?xml version="1.0" encoding="UTF-8"?>
<!-- Only used for public simulations -->
<launch>
  <arg name="scan_topic" default="scan_raw"/>
  <arg name="map_topic" default="/object_map_server/map"/>
  <arg name="odom_topic"    default="mobile_base_controller/odom"/>
  <arg name="cmd_vel_topic" default="nav_vel"/>

  <arg name="initial_pose_params" default="/config/localization/initial_pose.yaml"/>
  <arg name="amcl_params" default="/config/localization/amcl.yaml"/>

  <arg name="move_base_params" default="/config/move_base/move_base.yaml"/>
  <arg name="recovery_behaviors_params" default="/config/move_base/recovery_behaviors.yaml"/>
  <arg name="global_costmap_plugins_params" default="/config/move_base/global_costmap_plugins.yaml"/>
  <arg name="global_costmap_params" default="/config/move_base/global_costmap.yaml"/>
  <arg name="local_costmap_plugins_params" default="/config/move_base/local_costmap_plugins.yaml"/>
  <arg name="local_costmap_params" default="/config/move_base/local_costmap.yaml"/>
  <arg name="global_planner_params" default="/config/move_base/global_planner.yaml"/>
  <arg name="local_planner_params" default="/config/move_base/local_planner.yaml"/>

  <!-- Localization -->
  <include file="/launch/amcl.launch">
    <arg name="scan_topic"     value="$(arg scan_topic)"/>
    <arg name="map_topic" value="$(arg map_topic)"/>
    <arg name="initial_pose_params" value="$(arg initial_pose_params)"/>
    <arg name="amcl_params" value="$(arg amcl_params)"/>
  </include>

  <!-- Move Base -->
  <include file="/launch/move_base.launch">
    <arg name="scan_topic" value="$(arg scan_topic)"/>
    <arg name="map_topic" value="$(arg map_topic)"/>
    <arg name="odom_topic" value="$(arg odom_topic)"/>
    <arg name="cmd_vel_topic" value="$(arg cmd_vel_topic)"/>

    <arg name="move_base_params" value="$(arg move_base_params)"/>
    <arg name="recovery_behaviors_params" value="$(arg recovery_behaviors_params)"/>
    <arg name="global_costmap_plugins_params" value="$(arg global_costmap_plugins_params)"/>
    <arg name="global_costmap_params" value="$(arg global_costmap_params)"/>
    <arg name="local_costmap_plugins_params" value="$(arg local_costmap_plugins_params)"/>
    <arg name="local_costmap_params" value="$(arg local_costmap_params)"/>
    <arg name="global_planner_params" value="$(arg global_planner_params)"/>
    <arg name="local_planner_params" value="$(arg local_planner_params)"/>
  </include>

</launch>