<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="scan_topic" default="scan_raw"/>
  <arg name="map_topic" default="/object_map_server/map"/>

  <arg name="initial_pose_params" default="$(find tiago_sim)/config/localization/initial_pose.yaml"/>
  <arg name="amcl_params" default="$(find tiago_sim)/config/localization/amcl.yaml"/>

  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <remap from="scan" to="$(arg scan_topic)"/>
    <remap from="map" to="$(arg map_topic)"/>

    <!-- Load the last saved pose estimate (initial pose) -->
    <rosparam file="$(arg initial_pose_params)" command="load"/>
    <rosparam file="$(arg amcl_params)" command="load"/>
  </node>
</launch>